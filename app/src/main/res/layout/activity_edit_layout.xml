<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".edit_layout"
    android:background="#00000000">

    <TextView
        android:id="@+id/editTxt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit text"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff">

    </TextView>




    <EditText
        android:textColor="#000000"
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:hint="Enter heading name"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/bg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Background colour"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#ffffff">

    </TextView>


    <HorizontalScrollView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/red_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background ="#F60101"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFD600"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/blue_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#0227F4"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFD600"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/black_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#000000"
                app:civ_border_width="5dp"
                app:civ_border_color="#FFD600"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/white_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                app:civ_circle_background_color="@color/colorPrimary"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFD600"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/grey_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#B1AEAE"
                app:civ_border_color="#FFD600"
                app:civ_border_width="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/yellow_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#F6D630"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFD600"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pink_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#C51162"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFD600"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/green_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#348103"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFD600"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/txt_col_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Text colour"
        android:textColor="#ffffff">

    </TextView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/red_txt_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background ="#F60101"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFD600"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/blue_txt_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#0227F4"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFD600"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/black_txt_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#000000"
                app:civ_border_width="5dp"
                app:civ_border_color="#FFD600"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/white_txt_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                app:civ_circle_background_color="@color/colorPrimary"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFD600"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/grey_txt_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#B1AEAE"
                app:civ_border_color="#FFD600"
                app:civ_border_width="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/yellow_txt_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#F6D630"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFD600"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pink_txt_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#C51162"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFD600"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/green_txt_col"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#348103"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFD600"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>
    </HorizontalScrollView>




    <ImageButton
        android:id="@+id/btn_ok"
        android:padding="2dp"
        android:src="@drawable/ic_ok"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#DEF9FD"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        />



</LinearLayout>